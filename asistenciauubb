<div id="overlayDni" class="overlay">
    <div class="popup">
        <h3>&#191;Es correcto su DNI?</h3>
        <div id="dniVer" class="dni-confirm">--------</div>
        <div style="display:flex; gap:10px;">
            <button class="btn" style="background:#666; flex:1;" onclick="resetDni()">NO</button>
            <button class="btn" style="background:var(--success); flex:2;" onclick="dniOk()">S&#205;, CORRECTO</button>
        </div>
    </div>
</div>

<div id="overlayFin" class="overlay">
    <div class="popup">
        <div id="iconFin" class="icon-check">âœ“</div>
        <h3 id="tituloFin">&#161;REGISTRO EXITOSO!</h3>
        <p>La informaci&#243;n ha sido enviada correctamente.</p>
        <button class="btn" style="background:var(--secondary)" onclick="location.reload()">ENTENDIDO</button>
    </div>
</div>

<script>
    const URL_SCRIPT = "PON_AQUI_TU_URL_DE_GOOGLE_APPS_SCRIPT";
    let coords = { lat: null, lon: null };
    let fotoRealizada = false;
    let dniConfirmado = false;
    const video = document.getElementById('video');

    window.onload = () => {
        navigator.mediaDevices.getUserMedia({ video: { facingMode: "user" } })
            .then(s => video.srcObject = s)
            .catch(e => alert("Debe permitir el uso de la cÃ¡mara para registrar su foto."));

        navigator.geolocation.getCurrentPosition(
            p => { coords.lat = p.coords.latitude; coords.lon = p.coords.longitude; },
            e => alert("Debe activar el GPS. La ubicaciÃ³n es obligatoria."),
            { enableHighAccuracy: true }
        );
    };

    function validarDNI() {
        const val = document.getElementById('dni').value;
        if (val.length === 8 && !dniConfirmado) {
            document.getElementById('dniVer').innerText = val;
            document.getElementById('overlayDni').style.display = 'flex';
        }
    }

    function resetDni() {
        document.getElementById('dni').value = "";
        document.getElementById('overlayDni').style.display = 'none';
        dniConfirmado = false;
    }

    function dniOk() {
        dniConfirmado = true;
        document.getElementById('overlayDni').style.display = 'none';
        verificarPasos();
    }

    function hacerFoto() {
        const canvas = document.getElementById('canvas');
        canvas.width = video.videoWidth; canvas.height = video.videoHeight;
        canvas.getContext('2d').drawImage(video, 0, 0);
        fotoRealizada = true;
        alert("Â¡Foto capturada! âœ…");
        verificarPasos();
    }

    function verificarPasos() {
        if (dniConfirmado && fotoRealizada) {
            document.getElementById('opcionesManuales').style.display = 'flex';
        }
    }

    async function enviarDatos(tipo) {
        if (!coords.lat) return alert("Buscando seÃ±al GPS... Espere un momento.");
        
        document.getElementById('opcionesManuales').style.pointerEvents = 'none';
        document.getElementById('opcionesManuales').style.opacity = '0.5';

        let ip = "Desconocida";
        try {
            const resp = await fetch('https://api.ipify.org?format=json');
            const data = await resp.json();
            ip = data.ip;
        } catch (e) {}

        const payload = {
            dni: document.getElementById('dni').value,
            lat: coords.lat,
            lon: coords.lon,
            ip: ip,
            foto: fotoRealizada,
            tipo: tipo
        };

        fetch(URL_SCRIPT, {
            method: 'POST',
            mode: 'no-cors',
            body: JSON.stringify(payload)
        })
        .then(() => mostrarExito(tipo))
        .catch(err => {
            alert("Error de conexiÃ³n. Intente nuevamente.");
            document.getElementById('opcionesManuales').style.pointerEvents = 'auto';
            document.getElementById('opcionesManuales').style.opacity = '1';
        });
    }

    function mostrarExito(tipo) {
        const icon = document.getElementById('iconFin');
        const titulo = document.getElementById('tituloFin');
        titulo.innerHTML = (tipo === 'INGRESO') ? "&#161;INGRESO EXITOSO!" : "&#161;SALIDA EXITOSA!";
        icon.className = "icon-check " + (tipo === 'INGRESO' ? "" : "salida");
        document.getElementById('overlayFin').style.display = 'flex';
    }
</script>

</body>
