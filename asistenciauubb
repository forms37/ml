<div class="card">
    <div class="logo-container">
        <img src="https://i.imgur.com/QLZWLHV.png" alt="Logo INPE" class="logo-inpe">
    </div>
    
    <h3 style="margin:0; color:var(--secondary)">REGISTRO DIGITAL</h3>
    <p style="margin-top:5px">Control de Asistencia Comunitaria</p>

    <div class="video-box">
        <video id="video" autoplay playsinline></video>
        <canvas id="canvas" style="display:none;"></canvas>
    </div>

    <input type="number" id="dni" placeholder="INGRESE DNI" inputmode="numeric" oninput="validarDNI()">

    <button type="button" class="btn btn-photo" onclick="hacerFoto()">ðŸ“¸ 1. TOMAR FOTO</button>

    <div id="opcionesManuales" class="selector-manual">
        <button class="btn btn-ingreso" onclick="enviarDatos('INGRESO')">REGISTRAR INGRESO</button>
        <button class="btn btn-salida" onclick="enviarDatos('SALIDA')">REGISTRAR SALIDA</button>
    </div>
